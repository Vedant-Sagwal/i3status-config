general {
        colors = true
        interval = 30
}
order += "ipv6"
order += "disk /"
order += "memory"
order += "battery 0"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"


battery 0{
        format = "%status %percentage %consumption %remaining %emptytime    "
        last_full_capacity = true
        integer_battery_capacity = true
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 10
        path = "/sys/class/power_supply/macsmc-battery/uevent"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
load {
        format = "%1min"
}
disk "/" {
        format = "%avail"
}
memory {
    format = "%used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free" 
}
